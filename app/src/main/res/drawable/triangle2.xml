<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background rectangle to create the triangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue" /> <!-- Set the desired color -->
        </shape>
    </item>

    <!-- Triangle shape -->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/blu_logo" /> <!-- Set the color of the triangle -->
            </shape>
        </rotate>
    </item>

</layer-list>
